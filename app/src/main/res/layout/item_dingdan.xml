        <!--android:id="@+id/item_dingdan_iv_3"-->
        <!--android:layout_marginRight="@dimen/x24"-->
        <!--android:background="@mipmap/jiedan"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x24"
        android:id="@+id/item_dingdan_iv_1"
        android:textSize="@dimen/tv_24px"
        android:textColor="@color/c_666666"
        android:text="先联系"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:gravity="center"
        android:layout_marginRight="@dimen/x24"
        android:background="@drawable/tag_tv_no_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x24"
        android:id="@+id/item_dingdan_iv_2"
        android:textSize="@dimen/tv_24px"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:textColor="@color/c_666666"
        android:text="拒绝"
        android:gravity="center"
        android:layout_marginRight="@dimen/x24"
        android:background="@drawable/tag_tv_no_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x24"
        android:id="@+id/item_dingdan_iv_3"
        android:textSize="@dimen/tv_24px"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:textColor="@color/back_blue"
        android:text="接单"
        android:gravity="center"
        android:layout_marginRight="@dimen/x24"
        android:background="@drawable/tag_tv_yes_background"/>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x24"
        android:background="@color/c_f7faff"/>
</LinearLayout>