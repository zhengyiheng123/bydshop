<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:id="@+id/pop_time_ll"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:id="@+id/pop_dingdan_view"
            android:background="@mipmap/ic_shaixuan" />
        <TextView
            android:id="@+id/pop_dingdan_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:background="@color/c_ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="按时间段"
            android:textColor="@color/back_blue"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@color/back_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:background="@color/c_ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="请输入您要查询的时间段"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_24px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff"
            android:paddingBottom="@dimen/x24"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pop_time_tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/c_fafafa"
                android:layout_marginLeft="@dimen/x24"
                android:text="开始时间"
                android:textSize="@dimen/tv_24px"
                android:textColor="@color/c_666666"
                android:padding="@dimen/x16"
                android:gravity="center"
                android:layout_weight="1"
                />
            <View
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:background="#000"
                />
            <TextView
                android:id="@+id/pop_time_tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/c_fafafa"
                android:layout_marginRight="@dimen/x24"
                android:text="结束时间"
                android:textSize="@dimen/tv_24px"
                android:textColor="@color/c_666666"
                android:padding="@dimen/x16"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff"
            android:visibility="gone"
            android:calendarViewShown="false"
            android:datePickerMode="spinner">

        </DatePicker>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_fafafa"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pop_time_tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                android:textSize="@dimen/tv_24px"
                android:textColor="@color/c_666666"
                android:padding="@dimen/x16"
                android:gravity="center"
                android:layout_weight="1"
                />

            />
            <TextView
                android:id="@+id/pop_time_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/c_fafafa"
                android:text="确定"
                android:textSize="@dimen/tv_24px"
                android:textColor="@color/c_666666"
                android:padding="@dimen/x16"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/c_55000000"
        android:id="@+id/pop_time_view"/>
</LinearLayout>