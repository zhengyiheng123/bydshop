<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/base_title" />

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jd_lianxi"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/back_blue"
            android:gravity="center"
            android:text="先联系"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:id="@+id/jd_jiedan_no"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4D96FF"
            android:gravity="center"
            android:text="不接单"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:id="@+id/jd_jiedan"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="接单"
            android:textColor="@color/back_blue"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/canyin_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl"
        android:layout_below="@id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_fbfcff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:background="@drawable/bg">

                <ImageView
                    android:id="@+id/jingdian_civ_head"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/x75"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x24"
                     />

                <TextView
                    android:id="@+id/jd_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/jingdian_civ_head"
                    android:layout_toRightOf="@+id/jingdian_civ_head"
                    android:paddingLeft="@dimen/x24"
                    android:text="张三"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <TextView
                    android:id="@+id/jd_tv_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jd_tv_name"
                    android:layout_toRightOf="@+id/jingdian_civ_head"
                    android:paddingLeft="@dimen/x24"
                    android:paddingTop="@dimen/x12"
                    android:text="可信任"
                    android:textColor="@color/c_FA4D47"
                    android:textSize="@dimen/tv_24px" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x24"
                    android:text="预定方信息"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:background="@color/c_ececec" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical"
                        android:text="预定人"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />


                    <TextView
                        android:id="@+id/jd_tv_yudingren"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:text="张三"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:background="@color/c_ececec" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical"
                        android:text="取票人"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />


                    <TextView
                        android:id="@+id/jd_tv_qupiaoren"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:text="张三"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:background="@color/c_ececec" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical"
                        android:text="取票人电话"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />


                    <TextView
                        android:id="@+id/jd_tv_dianhua"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:text="15555555555"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center_vertical"
                        android:text="邮箱号"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />


                    <TextView
                        android:id="@+id/jd_tv_youxiang"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:text="7465ssfa@qq.com"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x24"
                        android:text="订单内容"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />

                    <TextView
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="1.01" />

                    <TextView
                        android:id="@+id/jd_tv_type"
                        android:layout_width="@dimen/x0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="@dimen/x24"
                        android:text="团票"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:background="@color/c_ececec" />

                <LinearLayout
                    android:id="@+id/jd_ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:textColor="@color/c_333333"
                    android:orientation="vertical"
                    >

                </LinearLayout>



            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x24"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16"
                android:text="给商家留言"
                android:visibility="gone"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <EditText
                android:id="@+id/jd_edt_liuyan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:hint="请填写特殊要求  "
                android:visibility="gone"
                android:textSize="@dimen/tv_24px"
                android:paddingBottom="@dimen/x16"
                android:paddingLeft="@dimen/x68"
                android:paddingRight="@dimen/x24"
                android:paddingTop="@dimen/x16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:background="@color/c_ececec" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x16"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x24"
                    android:text="下单时间"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <TextView
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/jd_tv_xd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/x24"
                    android:text="2012-1-1 9:00"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:background="@color/c_ececec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@color/white"
                android:id="@+id/jd_ll_dao_time"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x24"
                    android:text="预约时间"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <TextView
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/jd_tv_dao_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/x24"
                    android:text="2012-1-1 9:00"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:background="@color/c_ececec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x24"
                    android:text="预定状态:"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <TextView
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/jd_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/x24"
                    android:text="等待订单"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x16"
                android:gravity="center_vertical"
                android:background="@color/c_ffffff"
                android:paddingLeft="@dimen/x24"
                android:text="总计:32$"
                android:id="@+id/jd_tv_price"
                android:textColor="@color/c_FA4D47"
                android:textSize="@dimen/tv_24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:background="@color/c_ececec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x24"
                    android:text="付款方式:"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <TextView
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cy_tv_pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/x24"
                    android:text="到店支付"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x24"
                android:layout_marginTop="@dimen/x16"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_marginLeft="@dimen/x24"
                    android:drawableLeft="@mipmap/screen"
                    android:drawablePadding="@dimen/x5"
                    android:gravity="center_vertical"
                    android:text="订票说明"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:background="@color/c_ececec" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x12"
                    android:paddingLeft="@dimen/x48"
                    android:text=""
                    android:id="@+id/jd_tv_shuoming"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/tv_24px" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>