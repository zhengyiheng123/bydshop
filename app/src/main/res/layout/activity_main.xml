<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <FrameLayout
                android:id="@+id/main_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x0"
                android:layout_weight="1">

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/c_f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:background="@color/c_ffffff"
                android:orientation="horizontal">

                <LinearLayout

                    android:id="@+id/main_ll_dingdan"
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_iv_dingdan"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:src="@mipmap/tabicon32"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x4"
                        android:gravity="center"
                        android:id="@+id/main_tv_dingdan"
                        android:text="订单"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/main_ll_kefu"
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_iv_kefu"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:src="@mipmap/tabicon4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x4"
                        android:gravity="center"
                        android:id="@+id/main_tv_kefu"
                        android:text="客服"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/main_ll_shangpin"
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_iv_shangpin"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:src="@mipmap/gongnengshiyong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x4"
                        android:gravity="center"
                        android:id="@+id/main_tv_shangpin"
                        android:text="商品"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/tv_24px" />
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/main_ll_wode"
                    android:layout_width="@dimen/x0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_iv_wode"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:src="@mipmap/tabicon5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x4"
                        android:gravity="center"
                        android:text="我的"
                        android:id="@+id/main_tv_wode"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/tv_24px" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>