<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFCFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:background="@drawable/bg">

        <ImageView
            android:id="@+id/item_canyin_head"
            android:layout_width="@dimen/x75"
            android:layout_height="@dimen/x75"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24" />

        <TextView
            android:id="@+id/cy_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_canyin_head"
            android:layout_toRightOf="@+id/item_canyin_head"
            android:paddingLeft="@dimen/x24"
            android:text="张三"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:id="@+id/cy_tv_renzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cy_tv_name"
            android:layout_toRightOf="@+id/item_canyin_head"
            android:paddingLeft="@dimen/x24"
            android:paddingTop="@dimen/x12"
            android:text="可信任"
            android:textColor="@color/c_FA4D47"
            android:textSize="@dimen/tv_24px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="预定方信息"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@color/c_ececec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/dianhua3"
                android:drawablePadding="@dimen/x5"
                android:gravity="center_vertical"
                android:text="电话:"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cy_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/x10"
                android:drawableRight="@mipmap/jiantou2"
                android:gravity="center_vertical"
                android:text="1555666677"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="订单内容"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@color/c_ececec" />

        <xyd.com.bydshop.customview.MaxListView
            android:id="@+id/cy_lv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </xyd.com.bydshop.customview.MaxListView>

        <TextView
            android:id="@+id/cy_tv_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:visibility="gone"
            android:text="五菜一汤  50元/人"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x24"
                android:text="团号"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cy_tv_tuanhao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/x24"
                android:text="1555666677"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_26px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@color/c_ececec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x24"
                android:text="用餐人数"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cy_tv_renshu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/x24"
                android:text="13"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@color/c_ececec" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x24"
        android:text="给餐厅的留言"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/tv_24px"
        android:visibility="visible" />

    <EditText
        android:id="@+id/cy_edt_liuyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:hint="用户没有留言"
        android:focusable="false"
        android:paddingBottom="@dimen/x24"
        android:paddingLeft="@dimen/x68"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/x16"
        android:textSize="@dimen/tv_24px"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="订单号"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cy_tv_dingdanhao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x24"
            android:text="33222556663"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginTop="@dimen/x16"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="下单时间"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cy_tv_xd_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x24"
            android:text="2012-1-1 9:00"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="到店时间和日期"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cy_tv_dao_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x24"
            android:text="2012-1-1 9:00"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="预定状态:"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cy_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x24"
            android:text="等待订单"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <TextView
        android:id="@+id/cy_tv_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginTop="@dimen/x16"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x24"
        android:text="总计:32$"
        android:textColor="@color/c_FA4D47"
        android:textSize="@dimen/tv_24px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:text="付款方式:"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cy_tv_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x24"
            android:text="到店支付"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x24"
        android:layout_marginTop="@dimen/x16"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x24"
            android:drawableLeft="@mipmap/screen"
            android:drawablePadding="@dimen/x5"
            android:gravity="center_vertical"
            android:text="取消条件"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@color/c_ececec" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x12"
            android:paddingLeft="@dimen/x48"
            android:text=""
            android:id="@+id/cy_tv_pay_qx"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />


    </LinearLayout>
</LinearLayout>