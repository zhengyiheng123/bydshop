<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x24"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_jd_iv"
        android:layout_width="@dimen/x148"
        android:layout_height="@dimen/x116"
        android:layout_margin="@dimen/x24"
        android:scaleType="fitXY"
        android:src="@mipmap/shangpintu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x24"
        android:layout_toRightOf="@+id/item_jd_iv"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_jd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:id="@+id/item_jd_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_jd_time"
            android:paddingTop="@dimen/x8">

            <TextView
                android:id="@+id/item_jd_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:id="@+id/item_jd_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x8">

            <TextView
                android:id="@+id/item_jd_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:id="@+id/item_jd_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>