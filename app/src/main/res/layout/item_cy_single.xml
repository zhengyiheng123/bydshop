<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x24"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_cy_single_iv"
        android:layout_width="@dimen/x148"
        android:layout_height="@dimen/x116"
        android:layout_margin="@dimen/x24"
        android:src="@mipmap/shangpintu" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_cy_single_iv"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/item_cy_single_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挪威森林"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/item_cy_single_tv_ke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="克重：300g"
            android:paddingTop="@dimen/x8"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x8"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_cy_single_tv_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="50元/人"
                android:textColor="@color/c_FA4D47"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:id="@+id/item_cy_single_tv_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="50元/人"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/tv_24px" />

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>