<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="商家名称"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_name"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请填写真实的商家信息(必填)"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_name"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="商家性质"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <CheckBox
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:text="商户拥有者"
            android:checked="true"
            android:button="@null"
            android:drawablePadding="@dimen/x24"
            android:drawableLeft="@drawable/seclect_jd_shangjia"
            android:id="@+id/rjd_cb_owner"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_24px" />
        <CheckBox
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:text="代理商"
            android:checked="false"
            android:drawablePadding="@dimen/x24"
            android:drawableLeft="@drawable/seclect_jd_shangjia"
            android:button="@null"
            android:id="@+id/rjd_cb_daili"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="联系人姓名"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_contact"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请填写真实的联系人姓名(必填)"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_contact"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="电话"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_phone1"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请填写方便用户联系的电话号码(必填)"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_phone1"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="电话2"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_phone2"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请填写方便用户联系的电话号码"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_phone2"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="Email"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_email"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入方便联系的邮箱号码"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_email"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="微信"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_wx"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入你的微信昵称或微信号"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_wx"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="传真"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_chuanzhen"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入方便联系的传真号码"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_chuanzhen"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="地址"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <EditText
            android:id="@+id/rjd_edt_address"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入景点的详细地址(必填)"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:id="@+id/rjd_tv_address"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="@color/c_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="地区"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />


        <TextView
            android:id="@+id/rjd_tv_area"
            android:layout_width="@dimen/x0"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:visibility="visible"
            android:drawableRight="@mipmap/jiantou2"
            android:gravity="center_vertical"
            android:textSize="@dimen/tv_24px" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x24"
        android:background="#FBFCFE" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:id="@+id/rjd_ll_tese"
        android:layout_marginTop="@dimen/x24"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:id="@+id/rjd_tv_tese"
            android:gravity="center_vertical"
            android:text="请选择经营特色"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <xyd.com.bydshop.flowlayout.TagFlowLayout
            android:id="@+id/rjd_tfl_tese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x24"
            app:max_select="-1">

        </xyd.com.bydshop.flowlayout.TagFlowLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rjd_rl_bottom"
        android:background="#FBFCFE">

        <CheckBox
            android:id="@+id/rjd_tv_mianze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/seclect_jd_shangjia"
            android:button="@null"
            android:drawablePadding="@dimen/x24"
            android:paddingLeft="@dimen/x24"
            android:paddingTop="@dimen/x50"
            android:textSize="@dimen/tv_24px"
            android:text="您已阅读并同意帮预定的免责声明" />

        <TextView
            android:id="@+id/rjd_tv_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_below="@+id/rjd_tv_mianze"
            android:layout_margin="@dimen/x60"
            android:background="@drawable/bg_ok"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/tv_24px" />
    </RelativeLayout>
</LinearLayout>