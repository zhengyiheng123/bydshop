<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x95"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:text="日期            "
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/special_tv_start"
                android:layout_width="@dimen/x172"
                android:layout_height="@dimen/x55"
                android:background="#EFF6FE"
                android:gravity="center"
                android:text="8:00"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:background="@color/c_333333" />

            <TextView
                android:id="@+id/special_tv_end"
                android:layout_width="@dimen/x172"
                android:layout_height="@dimen/x55"
                android:background="#EFF6FE"
                android:gravity="center"
                android:text="8:00"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_24px" />
        </LinearLayout>

        <TextView
            android:id="@+id/special_tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:text="删除"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/tv_24px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x95"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:text="时间            "
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/special_tv_morning_start"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x55"
                android:background="#EFF6FE"
                android:gravity="center"
                android:text="8:00"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:background="@color/c_333333" />

            <TextView
                android:id="@+id/special_tv_morning_end"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x55"
                android:background="#EFF6FE"
                android:gravity="center"
                android:text="8:00"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x24"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/special_tv_afternoon_start"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x55"
                android:background="#EFF6FE"
                android:gravity="center"
                android:text="8:00"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_24px" />

            <TextView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:background="@color/c_333333" />

            <TextView
                android:id="@+id/special_tv_afternoon_end"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x55"
                android:background="#EFF6FE"
                android:gravity="center"
                android:text="8:00"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/tv_24px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:background="#FBFCFF" />
</LinearLayout>