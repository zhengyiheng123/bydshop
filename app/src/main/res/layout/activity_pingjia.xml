<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FBFCFF"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/c_ffffff">

        <ImageView
            android:id="@+id/pingjia_head"
            android:layout_width="@dimen/x75"
            android:layout_height="@dimen/x75"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:background="@mipmap/touxiang" />

        <TextView
            android:id="@+id/pingjia_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_canyin_head"
            android:layout_toRightOf="@+id/item_canyin_head"
            android:paddingLeft="@dimen/x24"
            android:text="张三"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_canyin_head"
            android:layout_toRightOf="@+id/item_canyin_head"
            android:paddingLeft="@dimen/x40"
            android:text="历史评价："
            android:textColor="@color/c_333333"
            android:textSize="@dimen/tv_24px" />

        <TextView
            android:id="@+id/pingia_tv_renzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="可信任"
            android:textColor="@color/c_FA4D47"
            android:textSize="@dimen/tv_24px" />

    </LinearLayout>
    <xyd.com.bydshop.flowlayout.TagFlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:max_select="-1"
        android:layout_margin="@dimen/x48"
        android:id="@+id/pingjia_tfl"
        ></xyd.com.bydshop.flowlayout.TagFlowLayout>
</LinearLayout>